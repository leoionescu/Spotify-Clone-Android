<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mangoplay.yeezymusic.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.mangoplay.yeezymusic.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.mangoplay.yeezymusic.ui.library.LibraryFragment"
        android:label="@string/title_library"
        tools:layout="@layout/fragment_library" />

    <fragment
        android:id="@+id/navigation_playlist"
        android:name="com.mangoplay.yeezymusic.ui.playlist.PlaylistFragment"
        android:label="Playlist"
        tools:layout="@layout/fragment_playlist" />

    <fragment
        android:id="@+id/navigation_queue"
        android:name="com.mangoplay.yeezymusic.ui.queue.QueueFragment"
        android:label="Playlist"
        tools:layout="@layout/fragment_playlist" />

    <fragment
        android:id="@+id/navigation_add_to_playlist"
        android:name="com.mangoplay.yeezymusic.ui.playlist.AddToPlaylistFragment"
        android:label="Add to Playlist"
        tools:layout="@layout/add_to_playlist" />

    <fragment
        android:id="@+id/navigation_genre_fragment"
        android:name="com.mangoplay.yeezymusic.ui.genre.GenreFragment"
        android:label="Genre Fragment"
        tools:layout="@layout/fragment_genre" />

</navigation>