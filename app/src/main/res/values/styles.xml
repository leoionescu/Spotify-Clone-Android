<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Theme.AppCompat.DayNight.NoActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="SplashThemeEmpty" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_strong</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/gray_strong</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@color/black</item>
        <item name="tabTextAppearance">@style/TextAppearanceFirstTabs</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="TextAppearanceFirstTabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTabLayoutSecond" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicator">@color/green</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@color/black</item>
        <item name="tabTextAppearance">@style/TextAppearanceSecondTabs</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabRippleColor">@null</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="TextAppearanceSecondTabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        ...
    </style>

</resources>